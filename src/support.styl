#chats
	position absolute
	left 0
	top 0
	bottom 0
	right 0
	overflow auto

	.chat
		position absolute
		top 0
		bottom 0
		width 250px

		.user
			font-weight bold
			font-size 17px

		.message
			.sender
				font-weight bold
				margin-right 3px
				&:after
					content ':'

	.wrapper
		position absolute
		left 0
		right 0
		top 20px
		bottom 20px
		overflow auto

	.sendMessage
		bottom 0
		left 0
		width 100%
		position absolute